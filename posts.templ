package main

import "fmt"

templ favorites(movies []Movie) {
	<div>
		<ul class="movies-favorites" id="favoritesTemple">
			for _, movie := range movies {
				@movieThumbnail(movie)
			}
		</ul>movies-favorites
	</div>	
}

templ movieThumbnail(movie Movie) {
	<li id={ fmt.Sprintf("movieThumbnail-%d", movie.id) } class="thumbnail">
		<img class="thumbnail__img" src="/static/img/default-movie.jpg" alt="obrazek"/>
		<div class="thumbnail__content">
			<h2>{ movie.title }</h2>
			<p>{ movie.release_date }</p>
			<p>{ movie.vote_average }</p>
			if movie.bookmarked {
				<button
					hx-get={ string(templ.URL(fmt.Sprintf("/unsaved/%d", movie.id)))}
					hx-trigger="click consume" 
					hx-target={ fmt.Sprintf("#movieThumbnail-%d", movie.id) }
					>
					delete from bookmark
				</button>
			} else {
				<button hx-get={ string(templ.URL(fmt.Sprintf("/saved/%d", movie.id)))} hx-trigger="click consume" hx-target={ fmt.Sprintf("#movieThumbnail-%d", movie.id) } hx-swap="outerHTML">add to bookmark</button>			
			}
		</div>
	</li>
}

func sendID(id int) string {
    return fmt.Sprintf(`{'thumbnailId': '%s'}`, id) 
}
func sendIDGET(id int) string {
    return fmt.Sprintf(`/saved?id='%s'}`, id) 
}

templ searchTabTemplate(movies []Movie) {
	<div>
		<ul class="movies-thumbnails" id="searchResultTemplate">
			for _, movie := range movies {
				@movieThumbnail(movie)
			}
		</ul>
	</div>
}

